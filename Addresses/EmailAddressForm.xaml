<Window x:Class="Addresses.EmailAddressForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Addresses"
        mc:Ignorable="d"
        Title="EmailAddressForm" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="Email" HorizontalAlignment="Left" Height="25" Margin="23,32,0,0" VerticalAlignment="Top" Width="40"/>
        <TextBox x:Name="addEmailTextBox" HorizontalAlignment="Left" Height="20" Margin="68,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157"/>
        <Button x:Name="AcceptButton" Content="OK" HorizontalAlignment="Left" Height="20" Margin="236,37,0,0" VerticalAlignment="Top" Width="43" Click="AcceptButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Height="20" Margin="236,63,0,0" VerticalAlignment="Top" Width="43"/>

    </Grid>
</Window>
